@{
    ViewBag.Title = "Home Page";
}

<div id="app" v-cloak>


    <button v-on:click="createRow">Add</button>
    <button v-on:click="items=updateData()">Remove</button>
    <div class="container-fluid">
        <div class="form-group form-inline">
            <table class="table" style="margin-top: 1em; table-layout: fixed">
                <tbody>
                    <tr>
                        <td> <span>CurrentDateTime</span></td>
                        <td><span>{{CurrentDateTime}}</span></td>
                        <td></td>
                        <td></td>
                    </tr>
                    <tr>
                        <td><span>TotalUsageTime</span></td>
                        <td><span>{{TotalUsageTime}}</span></td>
                        <td></td>
                        <td></td>
                    </tr>
                </tbody>
            </table>
            <table class="table table-striped table-condensed">
                <thead>
                    <tr>
                        <th>
                            <div class=" form-group-sm">
                                <span>VirtualServerId: </span>
                            </div>
                        </th>
                        <th>
                            <div class=" form-group-sm">
                                <span>CreateDateTime: </span>
                            </div>
                        </th>
                        <th>
                            <div class=" form-group-sm">
                                <span>RemoveDateTime</span>
                            </div>
                        </th>
                        <th>
                            <div class=" form-group-sm">
                                <span>SelectedForRemove</span>
                            </div>
                        </th>
                    </tr>
                </thead>
                <tbody>
                    <tr v-for="item in items">
                        <td><span>{{ item.VirtualServerId }}</span> </td>
                        <td><span>{{ formatDate(item.CreateDateTime)}}</span> </td>
                        <td><span>{{ formatDate(item.RemoveDateTime)}}</span> </td>
                        <td><input type="checkbox" v-model="item.deleteFlag" /></td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>

<script src="~/Scripts/dist/bundle.js"></script>
